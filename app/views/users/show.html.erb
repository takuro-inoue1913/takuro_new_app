<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image? %>
　　      <%= image_tag @user.image.thumb.url %>
　      <% else %>
　　      <%= gravatar_for @user %>
　      <% end %>
　    </h1>
    </section>
　  <section class="stats">
        <%= render 'shared/stats' %>
    </section>
　      
        <%= @user.name %>
        <%= @user.username %>
        <%= @user.email %>
        <%= @user.webpage %>
        <%= @user.self_introduction %>
        <%= @user.phone_number %>
        <%= @user.sex %>
     
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>


