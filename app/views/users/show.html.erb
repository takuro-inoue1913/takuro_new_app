<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <% if @user.image? %>
　　      <%= image_tag @user.image.thumb.url %>
　      <% else %>
　　      <%= image_tag("noimage.gif", alt: "プロフィール画像未登録") %>
　      <% end %>
        
        <%= @user.name %>
        <%= @user.username %>
        <%= @user.email %>
        <%= @user.webpage %>
        <%= @user.self_introduction %>
        <%= @user.phone_number %>
        <%= @user.sex %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>


