<% provide(:title, '新規登録') %>
<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :username, "User Name (ローマ字入力)" %>
      <%= f.text_field :username %>
      
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password, "password ※ 6文字以上" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "※ パスワードをもう一度入力してください" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.submit "入力完了！", class: "btn btn-warning btn-lg" %>
    <% end %>
  </div>
</div>