<% provide(:title, '新規登録') %>
<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>
     
      <%= f.label :image, "プロフィール画像" %>
　　  <%= f.file_field :image, class: 'form-control' %>
　　  <%= f.hidden_field :image_cache %>
　　  
      <%= f.label :username, "User Name (ローマ字入力)" %>
      <%= f.text_field :username, class: 'form-control' %>
      
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "password 　※ 6文字以上" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Password confirmation　(再入力)" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.label :follow_notification, class:"checkbox inline" do %>
      <%= f.check_box :follow_notification %>
        <span>フォロー通知を受け取る</span>
      <% end %>
      
      
      <%= f.submit "入力完了！", class: "btn btn-warning btn-lg" %>
      
      <% end %>
  </div>
</div>