<li id="micropost-#{@micropost.id}">
  
  <% if @micropost.user.image? %>
　　<%= image_tag @micropost.user.image.thumb.url, size: '50x50' %>
　<% else %>
　  <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>　
　<% end %>
  
  <span class="user"><%= link_to "#{@micropost.user.name}", @micropost.user %></span>
  
  <span class="content"><%= @micropost.content %>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
  </span>
</li>

<div class="comment_index">
   <h3>Comments</h3>
     <% @micropost.comments.each do |comment| %>
       <% if @micropost.user.image? %>
　　     <%= link_to @micropost.user.image.thumb.url, size: '50x50' %>
　     <% else %>
　       <%= link_to gravatar_for(comment.user, size: 50), comment.user %>　
     　<% end %>
       <p><%= link_to "#{comment.user.name}" , @user %>: <%= comment.body %></p>
       
         <span> <%= image_tag comment.picture.url if comment.picture?%></span>
         <span><%= link_to "x" , @micropost.comment, method: :delete if current_user?(comment.user) %></span></p>
       <hr/>
     <% end %>
</div>