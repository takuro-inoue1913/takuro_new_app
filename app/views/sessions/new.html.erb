<% provide(:title, "ログイン") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3" id="login-form">
    <%= form_for(:session, url: login_path) do |f| %>
      
      <%= f.label :username, "User name" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
       <%= f.label :remember_me, class: "checkbox inline" do %>
       <%= f.check_box :remember_me %>
        <span>次回からログイン状態にする</span>
       <% end %>

      <%= f.submit "ログインする", class: "btn btn-warning btn-lg" %>
      
    <% end %>

    <p id="no-login">アカウントをまだ持ってないですか？ <%= link_to "新規登録する", signup_path %></p>
  </div>
</div>