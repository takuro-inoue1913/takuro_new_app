<% if @user.errors.any? %>
   <div id="error_explanation">
    <div class="alert alert-danger">
      <% errors = @user.errors.count %>
      <%= "#{errors}個の入力ミスがあります。" %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
   </div>
<% end %>